[AWS_VAD_MIC_SA.NT.Wdf]
KmdfService = AWS_VAD_MIC_SA, AWS_VAD_MIC_SA_WdfSect
[AWS_VAD_MIC_SA_WdfSect]
KmdfLibraryVersion = 1.11

